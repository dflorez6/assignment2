@model Course
@{
    ViewData["Title"] = "Course Manager | Add Course";
}

<section class="index-wrapper">
    <!-- Title -->
    <div class="row text-center">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mb-2">
            <h1>
                Add Course
            </h1>
        </div>
    </div>
    <!-- ./Title -->
    <!-- Content -->
    <div class="row">
        <div class="col-12">

            <!-- Form -->
            <div class="row">
                <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 offset-md-2 offset-lg-3 offset-xl-3">
                    <form class="form-wrapper" asp-action="Edit" method="post">
                        <!-- Validation Error Messages -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Instructor">Instructor</label>
                            <input asp-for="Instructor" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Start">Start Date</label>
                            <input type="date" asp-for="Start" class="form-control" value="@DateTime.Now" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Room">Room #</label>
                            <input asp-for="Room" class="form-control" />
                        </div>

                        <div class="submit-wrapper mt-3">
                            <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Add Course
                            </button>
                        </div>

                    </form>
                </div>
            </div>
            <!-- ./Form -->

        </div>
    </div>
    <!-- ./Content -->
</section>

